---
export interface Props {
  title: string;
}
const { title } = Astro.props;
---

<h1 class="text-display-big">{title}</h1>

<style>
  h1:hover {
    animation: smooth-transition 600ms ease-in 0s infinite alternate both;
    cursor: default;
  }

  @keyframes smooth-transition {
    from {
      font-weight: 900;
    }
    to {
      font-weight: 400;
    }
  }
</style>
